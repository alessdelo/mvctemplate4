const Form1 = require('../models/kitty')
const debugs = require('../helpers/debugs.js')


exports.create = function (req, res) {


    let form1 = new Form1(
        {
            name: req.params.name,
            age: req.params.age
            
        }
    )

    form1.save(function (err) {
        if (err) {
            return next(err)
        }
        res.send('Record Created successfully! Record: ' + req.params.name + ' - ' + req.params.age)
    })

}

// READ
exports.read = function (req, res) {
    Form1.findById(req.params.id, function (err, result) {
        if (err) return next(err)
        res.send(result)
    })
}


// UPDATE
exports.update = function (req, res) {
    Form1.findByIdAndUpdate(
                            {
                                "_id": req.params.id
                             },
        
                            {
                                $set: { "name": req.params.name, "age": req.params.age}}, function (err, product) {
                                            if (err) return next(err)
                                                    res.send('Record udpated.' + ' _id: ' + req.params.id + 
                                                                                ' name: ' + req.params.name + 
                                                                                ' age: ' + req.params.age
                                                                                )
                            }
                           )
} // end update


// DELETE
exports.delete = function (req, res) {
    Form1.findByIdAndRemove(req.params.id, { useFindAndModify: false }, function (err, result) {
        if (err) return next(err)
        // res.send('item id: ' + req.params.id + ' Deleted successfully!')
        res.send( debugs.textFromObject(result) )
    })
}


// Extract last n.
exports.lastitems = function (req, res) {

    Kitty.find({}, { useFindAndModify: false }, function (err, result) {
    
         if (err) res.send(debugs.textFromObject(err)) // return next(err)
   
                res.send("the num: " + req.params.num + "<br> result: " + debugs.textFromObject(result))

            } ).sort({$natural:1}).limit(parseInt(req.params.num))
    
 } // end lastitems
